@import 'nib'
@import url('//fonts.googleapis.com/css?family=Lato:300,400,600,700');

_accent = #31d994

.lato
  font-family 'Lato', sans-serif

html,
body
  width 100%
  height 100%

body
  @extends .lato
  background #F2F2F2
  font-weight 400
  color #333

  #hashtag
    text-align center
    margin 0
    font-weight 300
    padding 20px 50px
    position relative
    max-width 500px
    margin 0 auto
    strong
      font-weight 600

  #loader
    position absolute
    top 15px
    left 50px

  #tweets
    position relative
    max-width 500px
    margin 0 auto
    .tweet
      padding 30px 50px
      position relative
      margin-bottom 10px
      border-radius 5px
      a,
      span.hashtag
        color darken(_accent, 30%)
        text-decoration none
      &.hidden
        display none
      p.tweet-text
        padding 20px
        padding-bottom 40px
        display block
        margin 0
        background #fff
      img.tweet-image
        width 100%
        height auto
      img.tweet-avatar
        display block
        width 48px
        height 48px
        box-shadow 0 0 0 3px #F2F2F2
        border-radius 24px
        margin-top -20px
        margin-left 10px
      h2.tweet-author
        margin 0
        position absolute
        display block
        left 110px
        font-size 20px
        font-weight 400
        color #999
        text-transform lowercase
        overflow hidden
        text-overflow ellipsis
        white-space nowrap

  #hidden
    position fixed
    top -100px
    left -100px
    width 1px
    height 1px
    opacity 0